<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.products.Domestics.DomesticListFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints,UselessParent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:id="@+id/tw_domesticTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="49dp"
            android:layout_toStartOf="@+id/img_drinks"
            android:text="@string/domestic_goods"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:id="@+id/img_drinks"
            android:layout_width="116dp"
            android:layout_height="74dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="52dp"
            android:layout_marginTop="26dp"
            android:src="@drawable/domestics"
            tools:ignore="ContentDescription" />

        <ListView
            android:id="@+id/lv_domestic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/img_drinks"
            android:layout_marginTop="30dp" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>