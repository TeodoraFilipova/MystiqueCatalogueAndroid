<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/iv_wished"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/product_description" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_wished"

            android:text="Product: " />

        <TextView
            android:id="@+id/tv_wishedname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/iv_wished"
            android:layout_marginStart="60dp"
            android:text="product"
            android:textAlignment="center"
            android:textColor="@color/md_blue_900" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_wishedname"
            android:text="Price: " />

        <TextView
            android:id="@+id/tv_wishedprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_below="@+id/tv_wishedname"
            android:text="price"
            android:textColor="@color/md_blue_900" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:text="$"
            android:layout_below="@id/tv_wishedname" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>